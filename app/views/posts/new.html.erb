<%= form_with model: @post, local: true do |form| %>
  
<%= form.label :wife_percentage, "妻の割合 (%)" %>
  <%= form.number_field :wife_percentage, step: 1, min: 0, max: 100, required: true %>
<%= form.label :husband_percentage, "夫の割合 (%)" %>
  <%= form.number_field :husband_percentage, step: 1, min: 0, max: 100, required: true %>

  <%= form.submit 'する' %>
<% end %>
<div class = "new_box">
<%# --- 掃除グラフ --- %>
<% @posts.each do |post| %>
  <div class="second_box">
    <div class = "post_box">
      <div class="post">
        <div class="post-date">
        <p ><strong>妻の割合:</strong> <span class="wife"><%= post.wife_percentage %></span> %</p>
        <p ><strong>夫の割合:</strong> <span class="husband"><%= post.husband_percentage %></span> %</p>
        </div>
      </div>
    </div>
  </div>
<% end %>
  <div class="all_box2">
    <div class="box">
    <h2>掃除</h2>
      <div class="chart-area">
      <canvas id="chart" class="chart"></canvas>
      </div>
    </div>
  </div>
<%# --- 料理グラフ --- %>
<% @posts.each do |post| %>
  <div class="second_box">
    <div class = "post_box">
      <div class="post">
        <div class="post-date">
        <p ><strong>妻の割合:</strong> <span class="wife"><%= post.wife_percentage %></span> %</p>
        <p ><strong>夫の割合:</strong> <span class="husband"><%= post.husband_percentage %></span> %</p>
        </div>
      </div>
    </div>
  </div>
<% end %>
  <div class="all_box2">
    <div class="box">
      <h2>料理</h2>
      <div class="chart-area">
        <canvas class="chart"></canvas>
      </div>
    </div>
  </div>
</div>
